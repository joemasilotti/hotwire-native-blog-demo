<div class="list-group-item d-flex justify-content-between align-items-center py-3">
  <div>
    <p class="text-body-secondary small mb-2"><span class="text-body fw-medium"><%= comment.author%></span> on <%= comment.created_at.strftime("%B %d") %></p>
    <p class="text-body-secondary mb-0"><%= comment.body %></p>
  </div>

  <div>
    <%= link_to comment, class: "btn btn-link btn-sm", data: {turbo_method: :delete} do %>
      <i class="bi bi-trash"></i>
    <% end %>
  </div>
</div>
